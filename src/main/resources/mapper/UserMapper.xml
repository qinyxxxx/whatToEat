<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qyx.whattoeat.mapper.UserMapper">
    <resultMap id="UserMap" type="com.qyx.whattoeat.model.User">
        <id column="id" property="id"/>
        <result column="email" property="email"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="nickname" property="nickname"/>
    </resultMap>

    <insert id="insert" parameterType="com.qyx.whattoeat.model.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(email, password_hash, nickname)
        VALUES (#{email}, #{passwordHash}, #{nickname})
    </insert>

    <select id="findByEmail" parameterType="string" resultMap="UserMap">
        SELECT id, email, password_hash, nickname FROM user WHERE email = #{email}
    </select>

    <select id="findById" parameterType="long" resultMap="UserMap">
        SELECT id, email, password_hash, nickname FROM user WHERE id = #{userId}
    </select>

</mapper>